<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/updateIcon"
        android:layout_width="@dimen/settings_activity_updateIcon_width"
        android:layout_height="@dimen/settings_activity_updateIcon_height"
        android:layout_marginRight="@dimen/settings_activity_updateIcon_marginRight"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/ic_baseline_edit_24_color_primary" />

    <!--URL Serveur-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtParametre"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:text="@string/settings_activity_TxtParametre_text"
                android:textSize="@dimen/settings_activity_TxtParametre_textSize"
                android:textColor="@color/black"
                tools:targetApi="jelly_bean" />

            <TextView
                android:id="@+id/TxtParametreValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/settings_activity_TxtParametreValue_marginTop"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/settings_activity_TxtParametreValue_marginBottom"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/settings_activity_TxtParametreValue_textSize"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.12"
                android:background="@android:color/black" />

        </LinearLayout>

</RelativeLayout>