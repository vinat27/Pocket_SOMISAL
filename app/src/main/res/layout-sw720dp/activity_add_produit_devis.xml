<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Client Infos-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                style="@style/CustomCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/blue_lighten_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ImgIcon"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="65dp"
                        android:layout_height="205dp"
                        android:gravity="center"
                        android:src="@drawable/list_alt"
                        android:paddingLeft="5dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/TxtClirasoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/activity_fiche_produit_TxtProLipro_marginTop"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_bold"
                            android:textFontWeight="900"
                            android:text="BOULANGERIE PATISSERIE CARRON"
                            android:textColor="@color/white"
                            android:textSize="@dimen/activity_fiche_produit_TxtProLipro_textSize"
                            tools:targetApi="jelly_bean" />

                        <!--Lieu de vente-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/LieuVente"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textFontWeight="700"
                                android:text="@string/item_devis_TxtLieuVente"
                                />

                            <TextView
                                android:id="@+id/TxtDevLieuv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Saint Pierre"/>
                        </LinearLayout>

                        <!--Statut du devis-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8sp">

                            <TextView
                                android:id="@+id/TxtDevStatuTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="@string/fiche_devis_activity_TxtDevStatuTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                />

                            <TextView
                                android:id="@+id/TxtDevStatu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:text="" />
                        </LinearLayout>


                        <!--Magasin-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8sp">

                            <TextView
                                android:id="@+id/TxtDevLimagTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="@string/activity_fiche_produit_TxtLiMagasin"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                />

                            <TextView
                                android:id="@+id/TxtDevLimag"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:text="" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8sp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:fontFamily="@font/montserrat_semibold"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:text="Livraison:"/>

                            <TextView
                                android:id="@+id/TxtDevDaliv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:text="13 Jan 2021"/>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.12"
                            android:background="@android:color/black" />

                        <!--Montant H.T.-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                            android:layout_marginBottom="14dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TxtMontantHtTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="@string/activity_fiche_produit_TxtMontantHtTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="3dp"
                                />

                            <TextView
                                android:id="@+id/TxtDevVadev"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/orange_darken_3"
                                android:fontFamily="@font/oswald_bold"
                                android:text="1 500 000,00 Franc C.F.A"
                                android:textSize="20sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--Stock-->
            <com.google.android.material.card.MaterialCardView
                style="@style/CustomCardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TxtProduits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:ellipsize="end"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_bold"
                            android:text="@string/activity_fiche_produit_TxtProduits"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_fiche_produit_TxtProLipro_textSize"
                            tools:targetApi="jelly_bean" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            app:chipBackgroundColor="@color/colorPrimary"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_bold"
                            android:visibility="gone" />


                    </RelativeLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerViewDetailsDevis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingTop="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/Lnr01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:paddingTop="@dimen/login_activity_Lnr01_paddingTop">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/no_item" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/noProductAddedText"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--Valider-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BtnTerminer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Lnr01"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:text="@string/serveur_node_fragment_BtnTerminerDevis_hint"
                android:textSize="@dimen/login_activity_BtnConnexion_TextSize"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:cornerRadius="32dp"
                android:textAllCaps="false"
                app:backgroundTint="@color/orange"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_devis_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</RelativeLayout>
