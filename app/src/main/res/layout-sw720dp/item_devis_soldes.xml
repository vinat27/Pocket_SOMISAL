<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/Lnr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgIcon"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_list_alt_orange_24"
                android:layout_marginTop="22dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="5sp"
                        android:text="Client:"/>

                    <TextView
                        android:id="@+id/TxtClirasoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="BOULANGERIE PATISSERIE CARRON"
                        android:paddingLeft="8sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Livraison:"
                        android:paddingLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtDevDaliv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="13 Jan 2021"
                        android:paddingLeft="19sp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14sp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Valeur H.T."
                        android:paddingLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtDevVadev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="28.28 Euros"
                        android:textSize="17sp"
                        android:paddingLeft="8sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--Numéro devis-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtNumeroDevis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/item_devis_TxtNumeroDevis"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/TxtDevNudev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="0000002"
                    android:textSize="16sp"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <!--Date devis-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtDateDevis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/item_devis_TxtDateDevis"
                    />

                <TextView
                    android:id="@+id/TxtDevDadev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="13 Jan 2021"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <!--Lieu de vente-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LieuVente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/item_devis_TxtLieuVente"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/TxtDevLieuv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Saint Pierre"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <!--Référence-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtReference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Référence"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/TxtDevRefdev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="*"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabDevisDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_baseline_visibility_24"
                    app:iconTint="@color/white"
                    android:text="Details"
                    app:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>