                <!--Code Postal - Ville-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/activity_commande_details_TxtCp"
                        />

                    <TextView
                        android:id="@+id/TxtComcopol"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/activity_commande_details_TxtVille"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />


                    <TextView
                        android:id="@+id/TxtComvilll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
