                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                    android:layout_weight="1"
                    android:layout_marginBottom="14dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TxtBp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="@string/activity_commande_details_TxtBp"
                        />

                    <TextView
                        android:id="@+id/TxtCombopos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />
                    <TextView
                        android:id="@+id/TxtPays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/activity_commande_details_TxtPays"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        />


                    <TextView
                        android:id="@+id/TxtComcpays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="" />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--Livraison-->
