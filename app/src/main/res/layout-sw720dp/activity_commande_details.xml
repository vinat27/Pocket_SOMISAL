                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>

                <!--Montant H.T.-->
                <LinearLayout
