<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_produit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtNuDev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="16dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp" />
            <!--Client Infos-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView2"
                style="@style/CustomCardViewSmallRoundStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImgIcon"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="65dp"
                            android:layout_height="205dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:src="@drawable/list_alt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/TxtClirasoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_horizontal_margin"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginTop="@dimen/activity_fiche_produit_TxtProLipro_marginTop"
                                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="BOULANGERIE PATISSERIE CARRON"
                                android:textColor="@color/colorPrimary"
                                android:textFontWeight="900"
                                android:textSize="@dimen/activity_fiche_produit_TxtProLipro_textSize"
                                tools:targetApi="jelly_bean" />

                            <!--Lieu de vente-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="6dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/LieuVente"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:layout_weight="0.6"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/item_devis_TxtLieuVente"
                                    android:textFontWeight="700"
                                    />

                                <TextView
                                    android:id="@+id/TxtDevLieuv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Saint Pierre"
                                    android:textColor="@color/black" />
                            </LinearLayout>
                            <!--Magasin-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/TxtDevLimagTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/activity_fiche_produit_TxtLiMagasin"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    />

                                <TextView
                                    android:id="@+id/TxtDevLimag"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="" />
                            </LinearLayout>

                            <!--Magasin-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/TxtDevStatuTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/fiche_devis_activity_TxtDevStatuTitle"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    />

                                <TextView
                                    android:id="@+id/TxtDevStatu"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginBottom="6dp"
                                android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                    android:text="Livraison:"/>

                                <TextView
                                    android:id="@+id/TxtDevDaliv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="13 Jan 2021"
                                    android:textSize="16sp"/>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black" />
                    <!--Montant H.T.-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_fiche_produit_LinearLayout_marginTop"
                        android:layout_marginBottom="14dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TxtMontantHtTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/neuehaasgrotesk"
                            android:textStyle="bold"
                            android:text="@string/activity_fiche_produit_TxtMontantHtTitle"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            />

                        <TextView
                            android:id="@+id/TxtDevVadev"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/neuehaasgrotesk"
                            android:textStyle="bold"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <!--Stock-->
            <com.google.android.material.card.MaterialCardView
                style="@style/CustomCardViewSmallRoundStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!--Référence-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/add_devis_activity_EdtDevRfdev"
                        android:inputType="text"
                        app:errorEnabled="true"
                        app:boxBackgroundColor="@color/white"
                        android:singleLine="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/EdtDevRfdev"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Livreur-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/searchable_spinner_style"
                        android:orientation="vertical">
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/MbSpnDevColiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:layout_marginRight="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="@string/add_devis_activity_MbSpnDevColiv"
                            app:met_floatingLabel="normal"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/black" />
                    </LinearLayout>

                    <!--Date Livraison-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/add_devis_activity_EdtDevDaliv"
                        app:errorEnabled="true"
                        app:boxBackgroundColor="@color/white"
                        android:inputType="date"
                        android:singleLine="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/EdtDevDaliv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"

                            android:fontFamily="@font/montserrat_regular" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!--Règlement-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/searchable_spinner_style"
                        android:orientation="vertical">

                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/MbSpnDevMoreg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:layout_marginRight="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="@string/add_devis_activity_MbSpnDevMoreg"
                            app:met_floatingLabel="normal"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/black"
                            app:met_textColorHint="@color/black" />
                    </LinearLayout>

                    <!--Délai-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/searchable_spinner_style"

                        android:orientation="vertical">
                        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                            android:id="@+id/MbSpnDevDereg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:layout_marginRight="@dimen/filter_produit_full_dialog_fragment_MbSpnFamille_MarginTop"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/montserrat_regular"
                            android:hint="@string/add_devis_activity_MbSpnDevDereg"
                            app:met_floatingLabel="normal"
                            app:met_hideUnderline="true"
                            app:met_textColor="@color/black"
                            app:met_textColorHint="@color/black" />
                    </LinearLayout>


                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

            <!--Valider-->
            <!--Valider-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BtnTerminer"
                app:icon="@drawable/ic_baseline_keyboard_arrow_right_24"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Lnr01"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center"
                android:text="@string/activity_add_devis_BtnValider_hint"
                android:textSize="@dimen/login_activity_BtnConnexion_TextSize"
                app:cornerRadius="32dp"
                android:textAllCaps="false"
                app:backgroundTint="@color/orange"
                android:textColor="@android:color/white" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>
