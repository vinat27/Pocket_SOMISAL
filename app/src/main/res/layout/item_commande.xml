<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="1dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/Lnr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgIcon"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_receipt_24_orange"
                android:layout_marginTop="22dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TxtClirasocTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="5sp"
                        android:textSize="11dp"
                        android:text="@string/TxtClirasoc_text"/>

                    <TextView
                        android:id="@+id/TxtComrasoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="8sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/TxtComDalivTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="11dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/TxtComDalivTitle_text"
                        android:paddingLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtComdaliv"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="8sp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/TxtComcoliv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semibold"
                        android:paddingLeft="19sp"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14sp">
                    <TextView
                        android:id="@+id/TxtComVacomTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/TxtComVacomTitle_text"
                        android:textSize="11dp"
                        android:paddingLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtComVacom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="28.28 Euros"
                        android:textSize="17sp"
                        android:paddingLeft="8sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--Numéro commande-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtNumeroCommande"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/item_commande_TxtNumeroCommande"
                    android:textSize="11dp"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/TxtComNucom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="0000002"
                    android:textSize="16sp"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <!--Date commande-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtDateCommandeTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/TxtDateCommandeTitle"
                    android:textSize="11dp"
                    />

                <TextView
                    android:id="@+id/TxtComDacom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="13 Jan 2021"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <!--Lieu de vente-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtLieuVente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/TxtLieuVenteText"
                    android:textSize="11dp"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/TxtComLieuv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Saint Pierre"
                    android:paddingLeft="8sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <!--Détails Devis-->
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabUpdateCom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:padding="18dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorPrimary"
                    app:icon="@drawable/ic_baseline_edit_24_white"
                    app:iconTint="@color/white" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabDeleteCom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_baseline_delete_24_white"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/red"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabComDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_baseline_visibility_24"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/colorPrimary"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>