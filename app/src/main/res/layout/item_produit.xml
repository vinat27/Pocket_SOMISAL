<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <!--Ligne de produit-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--LibellÃ© Produit-->
        <TextView
            android:id="@+id/TxtProLiPro"
            tools:targetApi="jelly_bean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:ellipsize="end"
            android:textSize="@dimen/item_produit_TxtProLiPro_textSize"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black" />
        <!--Code Produit-->
        <TextView
            android:id="@+id/TxtProCoPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/settings_activity_TxtParametreValue_marginTop"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/settings_activity_TxtParametreValue_marginBottom"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/item_produit_TxtProCoPro_textSize"
            android:textStyle="bold" />
        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.12"
            android:background="@android:color/black" />

    </LinearLayout>


</RelativeLayout>