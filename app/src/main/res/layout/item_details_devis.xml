<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/Lnr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TxtProLipro"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Duo Sud"
                        android:textSize="16sp"
                        android:layout_marginLeft="5sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/freesans"
                        android:text="Qté:"
                        android:paddingLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtDdvQtdev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/freesans"
                        android:text="2.000 K"
                        android:paddingLeft="8sp"/>

                    <TextView
                        android:id="@+id/TxtDdvPutar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textColor="@color/black"
                        android:fontFamily="@font/neuehaasgrotesk"
                        android:text="350 000"
                        android:paddingLeft="8sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="14sp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/freesans"
                        android:text="Montant:"
                        android:layout_marginLeft="5sp"/>

                    <TextView
                        android:id="@+id/TxtDdvVadev"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/neuehaasgrotesk"
                        android:text="28.28 Euros"
                        android:textSize="17sp"
                        android:paddingLeft="8sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandable_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--Numéro devis-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/freesans"
                    android:text="@string/item_detail_devis_TxtTxRemTitle"
                    android:layout_marginLeft="5sp"
                    android:textSize="12sp"
                    android:textColor="@color/green_darken_3"
                    />

                <TextView
                    android:id="@+id/TxtDdvTxRem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neuehaasgrotesk"
                    android:text="0000002"
                    android:layout_weight="0.4"
                    android:textSize="12sp"
                    android:textColor="@color/green_darken_3"
                    android:paddingLeft="8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_marginLeft="15sp"
                    android:textColor="@color/green_darken_3"
                    android:textSize="12sp"
                    android:fontFamily="@font/freesans"
                    android:text="@string/item_detail_devis_TxtVaRemTitle"
                    />

                <TextView
                    android:id="@+id/TxtDdvVarem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/green_darken_3"
                    android:fontFamily="@font/neuehaasgrotesk"
                    android:text="000000"
                    android:textSize="12sp"
                    android:paddingLeft="8sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <!--Détails Devis-->
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabDetPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/orange"
                    app:icon="@drawable/ic_baseline_visibility_24"
                    app:iconTint="@color/white"
                    app:fabSize="mini"
                    android:text="Détails"/>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/FabTxnPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_baseline_library_books_24"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/orange"
                    app:fabSize="mini"
                    android:text="Notes"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>