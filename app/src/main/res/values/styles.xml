<resources>
    <!--ThÃ¨me SOMISAL-->
    <style name="SomisalTheme" parent="SomisalTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="SomisalTheme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
    </style>

    <style name="SomisalTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SomisalTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="SomisalTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="SomisalTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>

    <style name="SomisalTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="MyTextInputLayout">
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>



</resources>